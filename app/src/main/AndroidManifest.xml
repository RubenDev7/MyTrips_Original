<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mytrips">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-feature android:name="android.hardware.camera.any"></uses-feature>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@drawable/mytrips_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mytrips_icon"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:theme="@style/Theme.MyTrips">
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".activitiesToolBar.ajustes"
            android:exported="false" />
        <activity
            android:name=".activitiesToolBar.favoritos"
            android:exported="false" />
        <activity
            android:name=".splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>